
- if params[:action] == "show"
  %button.btn.btn-danger.m-l-10{"data-bs-target" => "#deleteModal#{object_id}", "data-bs-toggle" => "modal", type: "button"}
    %i.ti.ti-trash
    Delete
- else
  %button.btn.btn-outline-danger.btn-sm.btn-delete{"data-bs-target" => "#deleteModal#{object_id}", "data-bs-toggle" => "modal", type: "button"}
    %i.ti.ti-trash

.modal.fade{id: "deleteModal#{object_id}", "aria-hidden" => "true", "aria-labelledby" => "deleteModal#{object_id}Label", "data-bs-backdrop" => "static", "data-bs-keyboard" => "false", tabindex: "-1"}
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        %h1#staticBackdropLabel.modal-title.fs-5
          %i.ti.ti-trash
          Delete Data
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
      .modal-body.text-center
        %br/
        %h5 Are you sure to delete this record?
        %br/
      .modal-footer
        %button.btn.btn-light{"data-bs-dismiss" => "modal", type: "button"} Cancel
        = link_to path, method: :delete, class: "btn btn-danger" do
          Delete