= link_to products_path, class: "btn btn-light" do
  %i.ti.ti-arrow-left
  Back to Products

= link_to edit_product_path(@product), class: "btn btn-primary m-l-10" do
  %i.ti.ti-pencil
  Edit

= link_to @product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger m-l-10" do
  %i.ti.ti-trash
  Delete

%br/
%br/
.row
  .col-lg-12.d-flex.align-items-stretch
    .card.w-100
      .card-body.p-4
        %h5.card-title.fw-semibold.mb-4
          %i.ti.ti-package
          Product Detail
        .table-responsive
          %table.table.table-bordered.custom-table
            %tbody.body-add-p-10
              %tr
                %td{style: "width: 20%"} Picture
                %th
                  = image_tag @product.picture_as_thumbnail, class: "img-fluid rounded", style: "max-width: 200px" if @product.picture.attached?
              %tr
                %td Name
                %th= @product.name
              %tr
                %td Status
                %th= @product.status
              %tr
                %td Category
                %th= @product.category.name
              %tr
                %td Description
                %th= @product.description
        .table-responsive
          %table.table.table-bordered.custom-table
            %tbody.body-add-p-10
              - @product.product_sizes.each do |product_size|
                %tr
                  %td{style: "width: 20%"}
                    = product_size.size
                  %th
                    = "$ #{product_size.price}"