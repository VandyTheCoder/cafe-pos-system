= link_to users_path, class: "btn btn-light" do
  %i.ti.ti-arrow-left
  Back to Users

= link_to edit_user_path(@user), class: "btn btn-primary m-l-10" do
  %i.ti.ti-pencil
  Edit

- if !@user.is_super_admin?
  = link_to @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger m-l-10" do
    %i.ti.ti-trash
    Delete

%br/
%br/
.row
  .col-lg-12.d-flex.align-items-stretch
    .card.w-100
      .card-body.p-4
        %h5.card-title.fw-semibold.mb-4
          %i.ti.ti-user
          User Detail
        .table-responsive
          %table.table.table-bordered.custom-table
            %tbody.body-add-p-10
              %tr
                %td{style: "width: 20%"} Picture
                %th
                  = image_tag @user.picture_as_thumbnail, class: "img-fluid rounded", style: "max-width: 200px" if @user.picture.attached?
              %tr
                %td Name
                %th= @user.name
              %tr
                %td Gender
                %th= @user.gender
              %tr
                %td Role
                %th= @user.role
              %tr
                %td Email
                %th= @user.email